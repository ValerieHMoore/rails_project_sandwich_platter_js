<% if @sandwich.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= pluralize(@sandwich.errors.count, "error") %>
      prohibited this sandwich from being saved:
    </h2>
    <ul>
    <% @sandwich.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_for [@user, @sandwich] do |f| %>
<%= f.hidden_field :user_id%>
<h3>
<p>
  <%= f.label :sandwich_name, 'Name Your Sandwich:' %>
  <%= f.text_field :sandwich_name %></p>
<p>
  <%= f.label :bread_name, "What kind of bread?" %>
  <%= f.text_field :bread_name %>
  <%= f.label :grill, "Grill It" %>
  <%= f.check_box :grill %>
  <%= f.label :open_face, "Make it Open Face" %>
  <%= f.check_box :open_face %></p>
    <p>
    <%= f.fields_for :sandwich_fillings do |j|%>
    <%= j.label :filling_name, "Spread/Filling" %>
    <%= j.text_field :filling_name %>
    <%= j.label :quantity, "Quantity" %>
    <%= j.text_field :quantity %><br>
    <br>
    <% end %>

<%= f.submit %>
</h3>

<% end %>
